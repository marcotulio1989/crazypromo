# Banco de dados PostgreSQL (Vercel Postgres, Supabase, Neon, etc)
DATABASE_URL="postgresql://user:password@host:5432/database?sslmode=require"

# Secret para NextAuth (gere com: openssl rand -base64 32)
AUTH_SECRET="sua-chave-secreta-aqui"

# URL do site (para NextAuth)
NEXTAUTH_URL="https://seu-dominio.vercel.app"

# Admin credentials for seeding (optional, generates random if not set)
ADMIN_EMAIL="admin@crazypromo.com"
ADMIN_PASSWORD="sua-senha-admin-segura"

# Cron job secret for scheduled tasks (gere com: openssl rand -base64 32)
CRON_SECRET="sua-chave-secreta-cron"
