// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// ============ USUÁRIOS E AUTENTICAÇÃO ============

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  password      String?
  image         String?
  role          Role      @default(USER)
  accounts      Account[]
  sessions      Session[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

enum Role {
  USER
  ADMIN
}

// ============ LOJAS E AFILIADOS ============

model Store {
  id              String   @id @default(cuid())
  name            String
  slug            String   @unique
  logo            String?
  website         String
  description     String?
  affiliateConfig Json?    // Configurações específicas do programa de afiliados
  affiliateUrl    String?  // URL base do programa de afiliados
  affiliateId     String?  // ID do afiliado nesta loja
  commission      Float?   // Porcentagem de comissão
  feedUrl         String?  // URL do feed de produtos (Lomadee, Awin, CSV)
  feedType        String?  // Tipo: lomadee, awin, csv, json
  feedMapping     Json?    // Mapeamento de campos para CSV
  lastFeedSync    DateTime? // Última sincronização do feed
  isActive        Boolean  @default(true)
  products        Product[]
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

// ============ PRODUTOS E PREÇOS ============

model Product {
  id              String         @id @default(cuid())
  name            String
  slug            String         @unique
  description     String?        @db.Text
  image           String?
  originalUrl     String         // URL original do produto na loja
  affiliateUrl    String?        // URL com link de afiliado
  currentPrice    Float
  originalPrice   Float?         // Preço "de" mostrado pela loja
  lowestPrice     Float?         // Menor preço histórico
  highestPrice    Float?         // Maior preço histórico
  averagePrice    Float?         // Preço médio histórico
  externalId      String?        // ID do produto na loja/feed
  ean             String?        // Código de barras (EAN/UPC) - para match entre lojas
  sku             String?        // SKU do produto
  brand           String?        // Marca do produto
  category        Category?      @relation(fields: [categoryId], references: [id])
  categoryId      String?
  store           Store          @relation(fields: [storeId], references: [id])
  storeId         String
  priceHistory    PriceHistory[]
  promotions      Promotion[]
  clicks          Click[]
  isActive        Boolean        @default(true)
  lastChecked     DateTime?
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt

  @@index([storeId])
  @@index([categoryId])
  @@index([currentPrice])
  @@index([ean])
  @@index([externalId, storeId])
}

model PriceHistory {
  id        String   @id @default(cuid())
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  productId String
  price     Float
  source    String?  // De onde veio o preço (scraping, api, manual)
  createdAt DateTime @default(now())

  @@index([productId])
  @@index([createdAt])
}

// ============ CATEGORIAS ============

model Category {
  id          String     @id @default(cuid())
  name        String
  slug        String     @unique
  description String?
  icon        String?
  image       String?
  parent      Category?  @relation("CategoryToCategory", fields: [parentId], references: [id])
  parentId    String?
  children    Category[] @relation("CategoryToCategory")
  products    Product[]
  isActive    Boolean    @default(true)
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}

// ============ PROMOÇÕES ============

model Promotion {
  id              String    @id @default(cuid())
  title           String
  description     String?   @db.Text
  product         Product   @relation(fields: [productId], references: [id], onDelete: Cascade)
  productId       String
  promotionPrice  Float
  originalPrice   Float
  discountPercent Float     // Desconto real calculado
  isRealDeal      Boolean   @default(false) // Se é uma promoção real baseada no histórico
  dealScore       Float?    // Pontuação da promoção (0-100)
  startsAt        DateTime?
  endsAt          DateTime?
  isActive        Boolean   @default(true)
  isFeatured      Boolean   @default(false)
  clicks          Click[]
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  @@index([isActive])
  @@index([isFeatured])
  @@index([dealScore])
}

// ============ RASTREAMENTO DE CLICKS ============

model Click {
  id          String     @id @default(cuid())
  product     Product?   @relation(fields: [productId], references: [id])
  productId   String?
  promotion   Promotion? @relation(fields: [promotionId], references: [id])
  promotionId String?
  ipAddress   String?
  userAgent   String?
  referer     String?
  createdAt   DateTime   @default(now())

  @@index([productId])
  @@index([promotionId])
  @@index([createdAt])
}

// ============ CONFIGURAÇÕES DO SISTEMA ============

model SystemConfig {
  id        String   @id @default(cuid())
  key       String   @unique
  value     Json
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// ============ LOGS DE MONITORAMENTO ============

model MonitoringLog {
  id        String   @id @default(cuid())
  type      String   // price_check, scraping_error, etc
  message   String
  data      Json?
  createdAt DateTime @default(now())

  @@index([type])
  @@index([createdAt])
}
